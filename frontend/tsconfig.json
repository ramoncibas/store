{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],    
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "downlevelIteration": true,
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/shared/*"], 
      "normalizers": ["src/normalizers"],
      "tokens": ["src/tokens/"],
      "hooks/*": ["src/view/Product/hooks/*"],
      "utils/*": ["src/utils/*"],
      "lytics": ["src/lytics/"],
      "view/*": ["src/view/*"],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
